  "version": "1.0.0",
  "description": "Backend service for Slack Connect integration using Node.js, Express, and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "clean": "tsc --build --clean"
  },
  "author": "Vijaya Laxmi Patra",
  "license": "MIT",
  "dependencies": {
